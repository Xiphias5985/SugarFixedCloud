<div class="container">
    <div class="col s12 z-depth-6">
        <div class="col s12">
            <h4 class="header">Log In to an Existing Account</h4>
            <div class="card horizontal">
                <div class="card-stacked">
                    <form class="col s12" action="/login" method="POST">
                        <div class="card-content">
                            <%- include ("./partials/toasts") %>
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">email</i>
                                    <input required type="email" id="email" name="email" class="validate"
                                        value="<%= typeof email != 'undefined' ? email : '' %>">
                                    <span class="helper-text" data-error="Invalid Email" data-success="">Enter your
                                        registered
                                        email</span>
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">password</i>
                                    <input required type="password" id="password" name="password" minlength="8"
                                        class="validate">
                                    <span class="helper-text" data-error="Password is too short" data-success="">Enter
                                        your account
                                        password</span>
                                    <label for="password">Password</label>
                                </div>
                            </div>
                            <button class="btn waves-effect waves-light" type="submit" name="login">Log In
                                <i class="material-icons right">login</i>
                            </button>
                        </div>
                        <div class="card-action">
                            <p>Don't have an account? <a href="/register">Create One</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>