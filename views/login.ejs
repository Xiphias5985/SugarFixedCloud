<%- include ("./partials/toasts") %>
    <%- include ("./partials/navigation") %>

        <div class="container">
            <div class="col s12 z-depth-6">
                <div class="col s12">
                    <h5 class="header">How would you like to log in?</h5>
                    <ul class="collapsible">
                        <li>
                            <div class="collapsible-header">
                                <i class="material-icons coloured">emoji_people</i>Sign In with a Social Account
                            </div>
                            <div class="collapsible-body">
                                <blockquote>
                                    We only record and sign you in with your username and email.<br />We do not store
                                    any
                                    sensitive profile information or passwords.
                                </blockquote>
                                <div class="center-align">
                                    <div class="row">
                                        <div class="col s12 m4 l4" style="margin-bottom: 20px;">
                                            <a href="/login/google" class="btn waves-effect button btn-large">Sign in
                                                with&nbsp;&nbsp;<svg aria-hidden="true" focusable="false"
                                                    data-prefix="fab" data-icon="google"
                                                    class="svg-inline--fa fa-google" role="img"
                                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 488 512">
                                                    <path fill="currentColor"
                                                        d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z">
                                                    </path>
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="col s12 m4 l4" style="margin-bottom: 20px;">
                                            <a href="/login/twitter" class="btn waves-effect button btn-large">Sign in
                                                with&nbsp;&nbsp;<svg aria-hidden="true" focusable="false"
                                                    data-prefix="fab" data-icon="twitter"
                                                    class="svg-inline--fa fa-twitter" role="img"
                                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                                    <path fill="currentColor"
                                                        d="M459.4 151.7c.325 4.548 .325 9.097 .325 13.65 0 138.7-105.6 298.6-298.6 298.6-59.45 0-114.7-17.22-161.1-47.11 8.447 .974 16.57 1.299 25.34 1.299 49.06 0 94.21-16.57 130.3-44.83-46.13-.975-84.79-31.19-98.11-72.77 6.498 .974 12.99 1.624 19.82 1.624 9.421 0 18.84-1.3 27.61-3.573-48.08-9.747-84.14-51.98-84.14-102.1v-1.299c13.97 7.797 30.21 12.67 47.43 13.32-28.26-18.84-46.78-51.01-46.78-87.39 0-19.49 5.197-37.36 14.29-52.95 51.65 63.67 129.3 105.3 216.4 109.8-1.624-7.797-2.599-15.92-2.599-24.04 0-57.83 46.78-104.9 104.9-104.9 30.21 0 57.5 12.67 76.67 33.14 23.72-4.548 46.46-13.32 66.6-25.34-7.798 24.37-24.37 44.83-46.13 57.83 21.12-2.273 41.58-8.122 60.43-16.24-14.29 20.79-32.16 39.31-52.63 54.25z">
                                                    </path>
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="col s12 m4 l4">
                                            <a href="/login/facebook" class="btn waves-effect button btn-large">Sign in
                                                with&nbsp;&nbsp;<svg aria-hidden="true" focusable="false"
                                                    data-prefix="fab" data-icon="facebook-f"
                                                    class="svg-inline--fa fa-facebook-f" role="img"
                                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                                                    <path fill="currentColor"
                                                        d="M279.1 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.4 0 225.4 0c-73.22 0-121.1 44.38-121.1 124.7v70.62H22.89V288h81.39v224h100.2V288z">
                                                    </path>
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="collapsible-header"><i class="material-icons coloured">face</i>Log In to an
                                Existing Account
                            </div>
                            <div class="collapsible-body">
                                <div class="card horizontal">
                                    <div class="card-stacked">
                                        <form class="col s12" action="/login" method="POST">
                                            <div class="card-content">
                                                <div class="row">
                                                    <div class="input-field col s12">
                                                        <i class="material-icons prefix coloured">email</i>
                                                        <input required type="text" id="email" name="email"
                                                            class="validate"
                                                            value="<%= typeof email != 'undefined' ? email : '' %>">
                                                        <span class="helper-text" data-error="Invalid Email"
                                                            data-success="">Enter your registered email</span>
                                                        <label for="email">Email</label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="input-field col s12">
                                                        <i class="material-icons prefix coloured">password</i>
                                                        <input required type="password" id="password" name="password"
                                                            minlength="8" class="validate">
                                                        <span class="helper-text" data-error="Password is too short"
                                                            data-success="">Enter your account password</span>
                                                        <label for="password">Password</label>
                                                    </div>
                                                </div>
                                                <button class="btn waves-effect waves-light button" type="submit"
                                                    name="login">Log In
                                                    <i class="material-icons right">login</i>
                                                </button>
                                            </div>
                                        </form>
                                        <div class="card-action">
                                            <p>Don't have an account?</p>
                                            <a class="btn waves-effect waves-light button btn-small"
                                                href='/register'>SIGN UP
                                                <i class="material-icons right">face</i>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <script src="js/login.js" async defer></script>